{
  "entrypoint": "index.html",
  "shell": "src/pixel-art-app/pixel-art-app.js",
  "fragments": [],
  "sources": [
    "fonts/**/*",
    "images/**/*",
    "src/**.js",
    "manifest/**",
    "package.json",
    "index.html",
    "src/pixel-art-app/pixel-art-app.js"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "manifest.json"
  ],
  "builds": [
    {
      "name": "public",
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": true,
        "compile": "es2015",
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true,
      "addPushManifest": false,
      "preset": "es6-bundled"
    }
  ],
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "npm": true,
  "componentDir": "node_modules/",
  "moduleResolution": "node"
}